<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/element_spacing_small"
    android:orientation="horizontal">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/skill_button"
        xmlns:fancy="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/element_spacing_normal"
        android:paddingLeft="@dimen/element_spacing_large"
        android:paddingRight="@dimen/element_spacing_large"
        android:paddingTop="@dimen/element_spacing_normal"
        fancy:defaultColor="@color/branding_color"
        fancy:focusColor="@color/branding_color_focused"
        fancy:radius="30dp"
        fancy:textColor="#FFFFFF"/>

</LinearLayout>