<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/branding_color</item>
        <item name="colorPrimary">@color/branding_color</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.Yep" parent="Theme.Base">
        <!-- Customize your theme here. -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarPopupTheme">@style/Theme.Base</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.Yep.Content">
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
