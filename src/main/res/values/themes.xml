<resources>

    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/branding_color</item>
        <item name="colorPrimary">@color/branding_color</item>
    </style>

    <style name="Theme.Base.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/branding_color</item>
        <item name="colorPrimary">@color/branding_color</item>
    </style>

    <style name="Theme.Yep" parent="Theme.Base">
        <!-- Customize your theme here. -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarPopupTheme">@style/Theme.Base</item>
        <item name="actionBarWidgetTheme">@style/ThemeOverlay.Yep.ActionBar</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.Yep.Content">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Yep.Content.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.Yep.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.Yep.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="ThemeOverlay.Yep.Popup" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Yep.NoDisplay" parent="Theme.Base.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Yep.MediaViewer" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/Widget.Yep.MediaViewer.ActionBar</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Yep.MediaViewer</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Widget.Yep.MediaViewer.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@drawable/bg_ab_mediaviewer</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
</resources>
