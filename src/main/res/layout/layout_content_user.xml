<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/user_scroll_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/element_spacing_large"
    tools:showIn="@layout/activity_user">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="?android:textColorPrimary"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:textColor="?android:textColorTertiary"/>

    <TextView
        android:id="@+id/introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:textColor="?android:textColorSecondary"/>

    <TextView
        android:id="@+id/master_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_spacing_small"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:background="?selectableItemBackground"
        android:padding="@dimen/element_spacing_normal"
        android:text="@string/label_master"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="?android:textColorSecondary"
        android:textStyle="bold"/>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/master_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/learning_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/element_spacing_small"
        android:layout_marginTop="@dimen/element_spacing_normal"
        android:background="?selectableItemBackground"
        android:padding="@dimen/element_spacing_normal"
        android:text="@string/label_learning"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="?android:textColorSecondary"
        android:textStyle="bold"/>

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/learning_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/providers_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/element_spacing_normal"
        android:background="?dividerVertical"/>

    <LinearLayout
        android:id="@+id/providers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <View
        android:id="@+id/topics_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/element_spacing_normal"
        android:background="?dividerVertical"/>

    <RelativeLayout
        android:id="@+id/user_topics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:minHeight="?listPreferredItemHeight"
        android:paddingLeft="@dimen/element_spacing_normal"
        android:paddingRight="@dimen/element_spacing_normal">

        <catchla.yep.view.ActionIconView
            android:id="@+id/user_topics_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:color="?android:textColorSecondary"
            android:src="@drawable/ic_action_feeds"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_topics_icon"
            android:layout_toRightOf="@+id/user_topics_icon"
            android:padding="@dimen/element_spacing_normal"
            android:text="@string/feeds"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="?android:textColorSecondary"/>
    </RelativeLayout>

</LinearLayout>