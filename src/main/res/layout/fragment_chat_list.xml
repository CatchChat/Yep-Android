<FrameLayout
    android:id="@+id/fragment_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_content_recyclerview_common"/>

    <catchla.yep.view.ExtendedRelativeLayout
        android:id="@+id/chatTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:clickable="true"
        android:elevation="8dp"
        android:padding="@dimen/element_spacing_normal">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/topicProfileImage"
            android:layout_width="@dimen/chat_topic_icon_size"
            android:layout_height="@dimen/chat_topic_icon_size"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/topicProfileImage"
            android:layout_toLeftOf="@+id/topicIcon"
            android:layout_toRightOf="@+id/topicProfileImage"
            android:layout_toStartOf="@id/topicIcon"
            android:orientation="vertical"
            android:paddingLeft="@dimen/element_spacing_normal"
            android:paddingRight="@dimen/element_spacing_normal">

            <TextView
                android:id="@+id/topicTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?colorAccent"
                tools:text="Title"/>

            <TextView
                android:id="@+id/topicSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Summary"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/topicIcon"
            android:layout_width="@dimen/chat_topic_icon_size"
            android:layout_height="@dimen/chat_topic_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"/>

    </catchla.yep.view.ExtendedRelativeLayout>

</FrameLayout>